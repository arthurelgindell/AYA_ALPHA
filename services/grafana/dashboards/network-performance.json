{
  "dashboard": {
    "title": "AYA Platform - Network & Performance",
    "uid": "aya-network-performance",
    "tags": ["aya", "network", "tailscale", "speed"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Tailscale Peers Online",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "count(tailscale_peer_online == 1)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Current Download Speed",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_internet_download_mbps",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "Mbps",
            "decimals": 1,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 100, "color": "orange"},
                {"value": 500, "color": "yellow"},
                {"value": 700, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Current Upload Speed",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_internet_upload_mbps",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "Mbps",
            "decimals": 1,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 250, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Current Ping",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_internet_ping_ms",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 1,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "ISP Performance - Download Speed (Plan: 900-950 Mbps)",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_internet_download_mbps",
            "legendFormat": "Download Speed",
            "refId": "A"
          }
        ],
        "options": {
          "tooltip": {"mode": "single"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "color": {"mode": "fixed", "fixedColor": "blue"},
            "unit": "Mbps",
            "min": 0,
            "max": 1000
          }
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "ISP Performance - Upload Speed (Plan: 330 Mbps)",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_internet_upload_mbps",
            "legendFormat": "Upload Speed",
            "refId": "A"
          }
        ],
        "options": {
          "tooltip": {"mode": "single"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "color": {"mode": "fixed", "fixedColor": "green"},
            "unit": "Mbps",
            "min": 0,
            "max": 400
          }
        }
      },
      {
        "id": 7,
        "type": "table",
        "title": "Tailscale Mesh Network Status",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "tailscale_peer_online",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "renameByName": {
                "peer": "Peer",
                "peer_ip": "IP Address",
                "Value": "Status"
              }
            }
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left"
            },
            "mappings": [
              {"type": "value", "value": "1", "text": "Online"},
              {"type": "value", "value": "0", "text": "Offline"}
            ]
          }
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Tailscale Inter-Node Latency",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "tailscale_peer_latency_ms",
            "legendFormat": "{{peer}}",
            "refId": "A"
          }
        ],
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2
            },
            "unit": "ms",
            "color": {"mode": "palette-classic"}
          }
        }
      }
    ]
  },
  "overwrite": true
}
