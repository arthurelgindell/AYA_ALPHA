{
  "dashboard": {
    "title": "AYA Platform - Agent Turbo Performance",
    "uid": "aya-agent-turbo",
    "tags": ["aya", "agent-turbo"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "15s",
    "time": {
      "from": "now-3h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Total Sessions",
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_agent_sessions_total",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Total Tasks",
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "sum(aya_agent_tasks_total)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Knowledge Entries",
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_knowledge_entries",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Embedding Coverage",
        "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "(aya_knowledge_embeddings / aya_knowledge_entries) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "bargauge",
        "title": "Tasks by Status",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 4},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_agent_tasks_total",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "completed"},
              "properties": [{"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}]
            },
            {
              "matcher": {"id": "byName", "options": "failed"},
              "properties": [{"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}]
            },
            {
              "matcher": {"id": "byName", "options": "pending"},
              "properties": [{"id": "color", "value": {"fixedColor": "yellow", "mode": "fixed"}}]
            }
          ]
        }
      },
      {
        "id": 6,
        "type": "bargauge",
        "title": "Tasks by Node",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 4},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "sum by(node) (aya_agent_tasks_total)",
            "legendFormat": "{{node}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 7,
        "type": "table",
        "title": "Recent Tasks",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 4},
        "targets": [
          {
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "postgres-aya_rag"},
            "format": "table",
            "rawSql": "SELECT task_id, task_type, status, assigned_to_platform as node, created_at FROM agent_tasks ORDER BY created_at DESC LIMIT 10",
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Knowledge Base Growth",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_knowledge_entries",
            "legendFormat": "Total Entries",
            "refId": "A"
          },
          {
            "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"}, "expr": "aya_knowledge_embeddings",
            "legendFormat": "With Embeddings",
            "refId": "B"
          }
        ],
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 20,
              "stacking": {"mode": "none"}
            },
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      }
    ]
  },
  "overwrite": true
}
